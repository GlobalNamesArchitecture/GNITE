<div id="<%= dom_id(reference_tree) %>" class="reference-tree reference-tree-<%= reference_tree.state %> ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs-hide">
  <div class="tree-background">

    <div class="breadcrumbs">
      <ul>
        <li>Reference Trees</li>
        <li><%= truncate(reference_tree.title, :length => 30) %></li>
      </ul>
    </div>

    <%= render :partial => 'shared/tree_searches.html' %>

    <%= render :partial => 'shared/tree_toolbars.html', :locals => { :tree_type => 'ReferenceTree', :tree => reference_tree } %>

    <%= render :partial => 'shared/bookmark_form.html', :locals => { :tree => reference_tree } %>

    <div class="tree-container reference-tree-container" data-database-id="<%= reference_tree.id %>">
      <div id=<%= dom_id(reference_tree, "container_for") %>></div>
    </div>

    <%= render :partial => 'master_trees/metadata.html' %>
  </div>
</div>
