<div id="<%= dom_id(reference_tree) %>" class="reference-tree reference-tree-<%= reference_tree.state %> ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs-hide">
  <div class="tree-background">

    <div class="breadcrumbs">
      <ul>
        <li>Reference Trees</li>
        <li><%= reference_tree.title %></li>
      </ul>
    </div>

    <%= render :partial => 'shared/tree_searches.html' %>

    <div id="toolbar-reference-<%= reference_tree.id %>" class="toolbar ddsmoothmenu clearfix">
      <ul class="topnav">
        <li><a href="#">View</a>
            <ul class="subnav">
              <li><a href="#" class="nav-refresh-tree">Refresh tree</a></li>
              <li><a href="#" class="nav-collapse-tree">Collapse tree</a></li>
            </ul>
        </li>
        <li><a href="#">Bookmarks</a>
          <ul class="subnav">
            <li><a href="#" class="nav-bookmarks-add">Add</a></li>
            <li><a href="#" class="nav-bookmarks-view">Show all</a></li>
          </ul>
        </li>
      </ul>
      <div class="bookmarks-results"></div>
    </div>

    <div class="tree-container reference-tree-container" data-database-id="<%= reference_tree.id %>">
      <div id=<%= dom_id(reference_tree, "container_for") %>></div>
    </div>

    <%= render :partial => 'master_trees/metadata.html' %>
  </div>
</div>
