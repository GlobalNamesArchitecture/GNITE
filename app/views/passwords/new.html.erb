<!-- Start of Login Content -->
<div id="loginwrap">
  <!-- Start of Logo -->
  <div id="loginlogo">
    <img src="/images/login-logo.png"/>
  </div>
  <!-- End of Logo -->
  <!-- Start of Forms -->
  <div id="loginform">
    <%= semantic_form_for :password, :id => "signin", :url => passwords_path do |form| -%>
      <%= form.inputs :title => "Reset your GNITE password" do -%>
        <%= form.input :email, :label => "Email address", :input_html => { :class => "prefilled input" } %>
      <% end -%>
      <%= form.buttons do -%>
        <%= form.commit_button "Reset password", :button_html => { :class => "blue-submit" } %>
      <% end -%>
    <% end -%>
    <hr/> 
    <p><%= link_to "Back to sign in screen", sign_in_path %></p> 
  </div>
  <!-- End of Forms -->
</div>
<!-- End of Body Content -->
