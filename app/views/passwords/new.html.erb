<!-- Start of Login Content -->
<div id="loginwrap">
  <!-- Start of Logo -->
  <div id="loginlogo">
    <p>GNITE LOGO</p>
  </div>
  <!-- End of Logo -->
  <!-- Start of Forms -->
  <div id="loginform">
    <%= semantic_form_for :password, :url => passwords_path do |form| -%>
      <%= form.inputs :title => "Reset your GNITE password" do -%>
        <%= form.input :email, :label => "Email address" %>
      <% end -%>
      <%= form.buttons do -%>
        <%= form.commit_button "Reset password" %>
      <% end -%>
    <% end -%>
  </div>
  <!-- End of Forms -->
</div>
<!-- End of Body Content -->

