<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="description" content="<%= meta_description %>">
  <title>GNITE</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag 'reset', 'screen', 'Aristo/jquery-ui-1.8rc3.custom' %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= body_class %>">
  <div id="wrapper">

    <% if current_user %>
      <%= render :partial => 'shared/navigation' %>
    <% end %>

    <div id="content" class="clearfix">
      <% if content_for?(:header) %>
        <div id="header">
          <h1><%= yield :header %></h1>
        </div>
      <% end %>

      <%= render :partial => 'shared/flashes' -%>
      <%= yield %>
    </div>
    
  </div>
  <%= render :partial => 'shared/javascript' %>
</body>
</html>
