<!-- Start of Login Content -->
<div id="loginwrap">
  <!-- Start of Logo -->
  <div id="loginlogo">
    <img src="images/login-logo.png"/>
  </div>
  <!-- End of Logo -->
  <!-- Start of Forms -->
  <div id="loginform">
    <%= form_for :session, :url => session_path, :id => "signin" do |form| %>
      <fieldset>
        <legend>Sign in to your account</legend>
        <p>
          <label for="emailform">Email</label>
          <input class="prefilled" id="emailform" name="session[email]" size="50" type="text" />
        </p>
        <p>
          <label for="passwordform">Password</label>
          <input class="prefilled" id="passwordform" name="session[password]" size="50" type="password" />
        </p>
      </fieldset>
      <p><input type="submit" value="Sign in" id="signin-btn"/></p>
    <% end %>
    <p>Forgot your password? <%= link_to "Reset it here", new_password_path %></p>
    <hr/>
    <p>Need a GNITE account? <%= link_to "Sign up here", sign_up_path %></p>
  </div>
  <!-- End of Forms -->
</div>
<!-- End of Body Content -->
