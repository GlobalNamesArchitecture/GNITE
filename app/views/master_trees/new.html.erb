  <div class="tree-column">
    <div id="fluid-head">
    </div>
    <div id="treewrap-left">
      <%= semantic_form_for(:master_tree, :url => master_trees_path, :html => { :method => :post, :id => "tree-metadata" }) do |form| %>

      <!-- Start of Tree Background -->
        <div class="tree-background dark">
          <div class="breadcrumbs">
            <ul>
              <li>Tree Description</li>
            </ul>
          </div>
          <div class="tree-back">
            <%= render :partial => "form", :locals => { :form => form } %>
        <%= form.buttons do -%>
          <%= form.commit_button "Create", :button_html => { :class => "green-submit" } %>
        <% end -%>
      <% end %>
      </div>
    </div>
    </div>
  </div>

  <!-- End of Left Tree -->
      <!-- Start of Right Tree -->
          <div class="tree-column">
            <div id="treewrap-right">
            <div id="tabs">
            	<ul>
            		<li><a href="#tabs-1">New Tab</a></li>
            		<li id="trash"><a href="#trash-tab">Trash</a></li>
            	</ul>
            	<div id="tabs-1">
                <div class="tree-background dark">
                    <div class="breadcrumbs">
                      <ul>
                        <li>New Import</li>
                      </ul>
                    </div>
                    <div id="tree-newimport">
                    	<ul>
                        <li>
                        <a href="#">
                          <div class="btn-img search">
                            <div class="content clearfix">
                              <h1>Search GNACLR Database</h1>
                              <p>Search GNACLR database for master trees to import</p>
                            </div>
                          </div>
                          </a>
                        </li>
                        <li>
                          <div class="btn-img upload clearfix">
                            <div class="content">
                              <h1>Upload New File</h1>
                              <p>Upload an Excel spreadsheet or plain text file</p>
                            </div>
                          </div>
                        </li>
                        <li>
                          <div class="btn-img browse">
                            <div class="content clearfix">
                              <h1>Open an Existing File</h1>
                              <p>Open one of my previously created master trees</p>
                            </div>
                          </div>
                        </li>
                  		</ul>
                    </div>

                  <!-- End of .tree-back-wrap -->
            	 </div>
            	 <!-- End of .tree-background -->
              </div>
