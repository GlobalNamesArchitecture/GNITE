<%= content_for :panel_header do %>
  <li>New Import</li>
<% end %>

<ul>
  <li class="gnaclr-search">
    <p id="gnaclr-error" style="display:none" class="error">Your search request could not be processed. Please try again later.</p>
    <h1>Search Classifications</h1>
    <label for="search">
      <p>Full search on nodes and metadata</p>
      <input type="text" id="gnaclr-search">
    </label>
  </li>
  <li>
    <%= link_to master_tree_gnaclr_classifications_path(@master_tree), :class => 'ajax-load-new-tab' do %>
      <div class="btn-img browse clearfix">
        <div class="content">
          <h1>Browse Classifications</h1>
          <p>Browse for master trees to import</p>
        </div>
      </div>
    <% end %>
  </li>
  <!--
  <li>
    <%= link_to '/', :class => 'ajax-load-new-tab' do %>
      <div class="btn-img upload clearfix">
        <div class="content">
          <h1>Import file</h1>
          <p>Upload a file to import</p>
        </div>
      </div>
    <% end %>
  </li>
  -->
  <li>
    <%= link_to new_master_tree_flat_list_import_path(@master_tree), :class => 'ajax-load-new-tab' do %>
      <div class="btn-img flat-list clearfix">
        <div class="content">
          <h1>Enter Flat List</h1>
          <p>Enter a flat list to import</p>
        </div>
      </div>
    <% end %>
  </li>
</ul>

<% content_for :javascript do -%>
  <script type="text/javascript">
    $('#search').focus();
  </script>
<% end -%>
