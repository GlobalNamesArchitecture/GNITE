<div id="loginform" class="clearfix">
  <%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.inputs title: "Change your password" do %>
      <%= f.input :password, label: "New password", input_html: { class: "input" } %>
      <%= f.input :password_confirmation, label: "Confirm new password", input_html: { class: "input" } %>
    <% end -%>

    <%= f.actions do %>
      <%= f.action :submit, as: :button, label: "Change my password", button_html: { class: "green-submit" } %>
    <% end -%>

  <% end -%>
</div>