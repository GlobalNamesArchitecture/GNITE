  <div id="fuzzy-tab" class="ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs-hide">
    <table id="merge-results-fuzzy" class="gnite-table merge-results">
      <thead>
        <tr>
          <%= render :partial => 'merge_decision_header' %>
          <td class="header-path">Primary Path</td>
          <td class="header-path">Secondary Path</td>
        </tr>
      </thead>
      <tbody>
        <% @fuzzy_matches.each do |fuzzy| %>
          <tr class="<% row_type = cycle("even", "odd") %><%= row_type %><%= (fuzzy == @fuzzy_matches.last && row_type == 'even') ? " last last-even" : (fuzzy == @fuzzy_matches.last && row_type == 'odd') ? " last last-odd": "" %>">
            <td class="merge-decision">
              <%= render :partial => 'merge_inputs', :locals => { :merge_id => fuzzy[:id], :decision_types => @decision_types } %>
            </td>
            <td><%= fuzzy[:primary_path] %></td>
            <td class="<%= fuzzy[:type] %><%= !fuzzy[:subtype].nil? ? " " << fuzzy[:subtype] : "" %>"><%= fuzzy[:secondary_path] %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
  </div>