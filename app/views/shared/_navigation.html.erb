<div id="navbar">
  <div id="logo"><a href="/"><img src="/images/logo-nav.png" alt="Global Names Integrated Taxonomic Editor"/></a></div>
  <div id="nav">
    <ul>
      <!-- Link to Working Trees -->
      <% if controller_name == 'master_trees' || controller_name == 'master_tree_logs' || controller_name == 'merge_events' %>
        <li id="active">
      <% else %>
        <li>
      <% end %>
        <%= link_to master_trees_path do %>
          <span class="nav_master_tree">Working Trees</span>
        <% end %>
      </li>

      <!-- Link to Profile Settings -->
      <% if controller_name == 'users' || controller_name == 'passwords' %>
        <li id="active">
          <%= link_to edit_user_path(current_user.id) do %>
            <span class="nav_profile">Profile Settings</span>
          <% end %>
        <ul>
          <% if controller_name == 'passwords' && action_name == 'edit' %>
           <li class="active"><%= link_to 'Change Password', edit_your_password_path %></li>
          <% else %>
            <li><%= link_to 'Change Password', edit_your_password_path %></li>
          <% end %>
        </ul>
      <% else %>
        <li>
        <%= link_to edit_user_path(current_user.id) do %>
          <img class="icon" src="/images/profile-nonactive.png"/>Profile Settings
        <% end %>
      <% end %>
      </li>

      <!-- Link to Feedback -->
      <li>
        <a href="javascript:UserVoice.showPopupWidget();" title="Feedback"><span class="nav_feedback">Feedback</span></a>
      </li>

      <!-- Link to Sign Out -->
      <li>
        <%= link_to sign_out_path do %>
          <img class="icon" src="/images/sign-out.png"/>Sign Out
        <% end %>
      </li>
    </ul>
  </div>
</div>

<% content_for :javascript do %>
<script type="text/javascript">
  var uvOptions = {};
  (function() {
    var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
    uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/AWgdy8RnNtPodnFpGvp9rg.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
  })();
</script>
<% end %>
