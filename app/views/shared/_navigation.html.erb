<div id="navbar">
  <div id="logo"><img src="/images/logo-nav.png"/></div>
  <div id="nav">
    <ul>
      <% if controller.controller_name == "master_trees" %>
        <li id="active">
      <% else %>
        <li>
      <% end %>
        <%= link_to master_trees_path do %>
          <span class="nav_master_tree">Master Trees</span>
        <% end %>
      </li>
      <% if controller.controller_name == "users" || controller.controller_name == "passwords"%>
        <li id="active">
          <span class="nav_profile">Profile Settings</span>
        <ul>
          <% if controller.controller_name == "passwords"  && controller.action_name = "edit" %>
           <li class="active"><%= link_to "Change Password", edit_your_password_path %></li>
          <% else %>
            <li><%= link_to "Change Password", edit_your_password_path %></li>
          <% end %>
        </ul>
      <% else %>
        <li>
        <%= link_to edit_user_path(current_user.id) do %>
          <img class="icon" src="/images/profile-nonactive.png"/>Profile Settings
        <% end %>
      <% end %>
      </li>
      <li><%= link_to "Sign out", sign_out_path %></li>
    </ul>
  </div>
</div>
