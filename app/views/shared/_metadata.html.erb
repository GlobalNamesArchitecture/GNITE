<div class="ui-dialog-titlebar ui-widget-header ui-helper-clearfix" data-node-id="<%= @metadata[:id] %>">
  <span class="ui-dialog-title"><%= @metadata[:name] %></span>
  <a class="ui-dialog-titlebar-close" href="#" role="button">
    <span class="ui-icon ui-icon-closethick"></span>
  </a>
</div>

<div class="metadata-section metadata-rank clearfix">
  <h4><span>Rank</span></h4>
  <ul class="clearfix" data-type="ranks">
    <% if(tree_type == "MasterTree") %>
      <li class="rank select">
      <span class="metadata-select"><%= @metadata[:rank] %></span>
      <%= select_tag "rank", options_for_select(["--None--"] + Vocabulary.find_by_identifier("rank").terms.collect {|p| [ p.name, p.identifier ] }, @metadata[:rank]) %>
    <% else %>
      <li class="rank">
      <%= @metadata[:rank] %>
    <% end %>
    </li>
  </ul>
</div>

<div class="metadata-section metadata-synonyms clearfix">
  <h4><span>Synonyms</span></h4>
  <ul class="clearfix synonyms<%= raw (tree_type == "MasterTree") ? " jstree-drop" : ""%>" data-type="synonyms">
    <% if @metadata[:synonyms].empty? %>
      <li class="metadata-none">None</li>
    <% else %>
      <% @metadata[:synonyms].each do |synonym| %>
        <li id="synonyms-<%= synonym[:metadata][:id] %>" class="synonym"><%= synonym[:name_string] %></li>
      <% end %>
    <% end %>
    <%= raw (tree_type == "MasterTree") ? "<li class=\"metadata-add green-submit-small\">Add</li>": "" %>
  </ul>
</div>

<div class="metadata-section metadata-vernacular-names clearfix">
  <h4><span>Vernaculars</span></h4>
  <ul class="clearfix vernaculars" data-type="vernacular_names">
    <% if @metadata[:vernaculars].empty? %>
      <li class="metadata-none">None</li>
    <% else %>
      <% @metadata[:vernaculars].each do |vernacular| %>
        <li id="vernacular_names-<%= vernacular[:metadata][:id] %>" class="vernacular"><%= vernacular[:name_string] %></li>
      <% end %>
    <% end %>
    <%= raw (tree_type == "MasterTree") ? "<li class=\"metadata-add green-submit-small\">Add</li>": "" %>
  </ul>
</div>