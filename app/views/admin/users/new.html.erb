<% content_for :header do %>
  <div class="tree_list_header clearfix">
    <div class="tree_list_header_inner clearfix">
      <h1>Administration :: Add User</h1>
    </div>
  </div>
<% end %>

<%= semantic_form_for(@user, :url => admin_users_path, :html => { :method => :post }) do |f| %>

<%= render :partial => 'users/shared/user_fields', :locals => { :f => f } %>

<%= render :partial => 'users/shared/user_account', :locals => { :f => f} %>

<%= render :partial => 'users/shared/user_roles', :locals => { :f => f } %>

<!-- Submit -->
  <%= f.buttons do -%>
    <%= f.commit_button "Save changes", :button_html => { :name => "commit", :class => "green-submit" } %>
  <% end %>

<% end %>